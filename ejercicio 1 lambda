#include <iostream>
using namespace std;

void swap(int *a, int *b){
    int tmp;
    tmp=*a;
    *a=*b;
    *b=tmp;
}

void reacomoda(int* ini, int* fin)
{
    auto par=[](int a){
        return a%2;
    };

    int *p=ini;

    for(int *i=ini; i<fin; i++){
        if(par(*i)){
            int temp=*i;
            for(int *q=i;q>p;q--){
                swap(*q,*(q-1));
            }
            p++;
        }
    }
}

int main()
{
    int A[10] = {1,2,3,4,5,6,7};

    cout << "Array antes del reacomodo" << endl;
    for (int i = 0; i < 10; i++)
        cout << A[i] << " ";
    cout << endl;

    reacomoda(A, A + 9, par);

    cout << "Array despues del reacomodo" << endl;
    for (int i = 0; i < 10; i++)
        cout << A[i] << " ";
    cout << endl;

}
