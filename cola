#include <iostream>
using namespace std;

template <class T>

class Cola{
    T A[10];
    T *head=nullptr;
    T *tail=nullptr;
    T *final=A+9;
  
    public:
        bool push(T val);
        bool pop(T &val);
        bool vacio();
        bool lleno();
        void print();
};

template <class T>
bool Cola<T>::vacio(){
    if(head == nullptr && tail == nullptr)
        return true;
    else
        return false;
}

template <class T>
bool Cola<T>::lleno(){
     return ((tail==final && tail-head==9) || (head-1 == tail && head!=nullptr));
}

template <class T>
bool Cola<T>::push(T val){
    if(lleno())
        return false;
        
    if (vacio()) {
        head = A;
        tail = A;
    } 
    else{
        tail++;
        if (tail > final) 
            tail = A;
    }
    *tail = val;
    return true;
}

template <class T>
bool Cola<T>::pop(T &val){
    if(vacio())
        return false;
        
    val=*head;
    if (head == tail) {
        head = nullptr;
        tail = nullptr;
    } 
    else {
        head++;
        if (head > final) 
        head = A;
    }
    return true;
}



int main() {
    Cola<int> numeros;

    numeros.push(5);
    numeros.push(6);
    numeros.push(7);

    int a;
    numeros.pop(a);
    cout << a << endl;
    numeros.pop(a);
    cout << a << endl;
    numeros.pop(a);
    cout << a << endl;
   
    return 0;
}
