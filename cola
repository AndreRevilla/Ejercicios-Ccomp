#include <iostream>
using namespace std;

template <class T>

class Cola{
  T A[10];
  T *head=nullptr;
  T *tail=nullptr;
  T *final=A+9;
  
  public:
  bool push(T val);
  bool pop(T &val);
  bool vacio();
  bool lleno();
};

template <class T>
bool Cola<T>::vacio(){
    if(head == nullptr && tail == nullptr)
        return true;
    else
        return false;
}

template <class T>
bool Cola<T>::lleno(){
    if (vacio()) return false;

    T* next = tail + 1;
    if (next > final) next = A;
    return next == head;
}

template <class T>
bool Cola<T>::push(T val){
    if(lleno())
        return false;
        
    if (vacio()) {
        head = A;
        tail = A;
        *tail = val;
    } 
    else{
        *tail = val;
        tail++;
        if (tail > final) tail = A;
    }
    return true;
}

template <class T>
bool Cola<T>::pop(T &val){
    if(vacio())
        return false;
        
    val=*head;
    if (head == tail) {
        // quedó vacía
        head = nullptr;
        tail = nullptr;
    } else {
        head++;
        if (head > final) head = A;
    }
    return true;
}

int main() {
    Cola<int> numeros;
    Cola<char> letras;

    numeros.push(5);

    int a;
    numeros.pop(a);
    cout << a << endl;

    return 0;
}
