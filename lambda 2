#include <iostream>
using namespace std;

void Funccad(char* frase, char(*op)(char))
{
    int tam=0;
    char *p = frase;
    while(*p!='\0'){
        tam++;
        p++;
    }

    char *ini = frase;
    char *fin = frase+tam-1;
    
    for(char *i=ini;i<=fin;i++){
        if(*i==' '){
            i++;
        }
        if(*fin==' '){
            fin--;
        }
        
        if(*i!=*fin){
            return false;
        }
    }
}

