#include <iostream>
using namespace std;

void Funccad(char* frase, char(*op)(char))
{
    int tam=0;
    char *p = frase;
    while(*p!='\0'){
        tam++;
        p++;
    }

    char *ini = frase;
    char *fin = frase+tam-1;
    
    for(char *i=ini;i<=fin;i++){
        *i=op(*i);
    }
}

int main()
{
    //char frases[][80] = { "AMO LA PALOMA"};
    char frases[][80] = { "amo la paloma"};

    for (char(*p)[80] = frases; p < frases + 1; p++)
        cout << *p << endl;

    auto mayus = [](char a) {
        if ((a>=65 && a<=90) or a==' ')
            return a;
        return (char)(a-32);
    };
    
    auto minus = [](char a) {
        if ((a>=97 && a<=122) or a==' ')
            return a;
        return (char)(a+32);
    };
    
    Funccad(frases[0],mayus);

    cout << "Array despues del la funcion lambda" << endl;
    //for (int i = 0; i < 10; i++)
    cout << frases[0] << " ";
    cout << endl;

}
